<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_busqueda_persona"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dani_.desaparecidos.Personas.BusquedaPersonaActivity"
    android:background="@drawable/f">

    <TextView
        android:text="Rellena los datos de busqueda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Rellena"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="normal|bold" />

    <EditText

        android:id="@+id/Nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_alignTop="@+id/NombreId"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp"
        android:background="@android:color/background_light" />

    <TextView
        android:id="@+id/NombreId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Nombre"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/Rellena"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/background_light" />



    <TextView
        android:text="@string/Piel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PielId"
        android:layout_below="@+id/Edad"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp"
        android:textColor="@android:color/background_light" />

    <EditText
        android:id="@+id/Piel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@+id/PielId"
        android:layout_alignParentStart="true"
        android:background="@android:color/background_light" />

    <TextView
        android:id="@+id/ApellidoId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Apellidos"
        android:textColor="@android:color/background_light"
        android:layout_below="@+id/Nombre"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/Apellido"
        android:background="@android:color/background_light"
        android:layout_below="@+id/ApellidoId"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/EdadId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Edad"
        android:textColor="@android:color/background_light"
        android:layout_below="@+id/Apellido"
        android:layout_alignParentStart="true"
        android:layout_marginTop="19dp" />

    <TextView
        android:text="@string/Genero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/GeneroId"
        android:layout_below="@+id/Piel"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/background_light" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Genero"
        android:layout_below="@+id/GeneroId"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/Piel"
        android:entries="@array/genero" />

    <Button
        android:id="@+id/Siguiente"
        android:layout_width="381dp"
        android:layout_height="43dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/Siguiente"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/Genero"
        android:layout_centerHorizontal="true" />
    <EditText
        android:id="@+id/Edad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/EdadId"
        android:layout_alignEnd="@+id/Piel"
        android:background="@android:color/background_light" />

</RelativeLayout>
